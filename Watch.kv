<Timer>:
    BoxLayout_1:
        orientation: 'vertical'
        spacing: 5
        padding: 10

        BoxLayout_1:
            orienation: 'horizontal'
            spacing: 5
            padding: 10
            Label:
                text: '0'
                id: hrs_l
                font_size: 100
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: root.ui_color
            Label:
                text: '0'
                id: min_l
                font_size: 100
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: root.ui_color
            Label:
                text: '0'
                id: sec_l
                font_size: 100
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: root.ui_color
            Label:
                text: '0'
                id: micro_sec_l
                font_size: 50
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: root.ui_color

        BoxLayout_1:
            size_hint: .8, .6
            pos_hint: {'center_x': .5}
            spacing: 5
            padding: 10
            orientation: 'horizontal'
            Button:
                background_color: (0, 0, 0, 0)
                text: 'Start'
                font_size: 50
                canvas.before:
                    Color:
                        rgba: root.ui_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [60,]
                disabled: root.start_disabled
                on_press: root.start_button()

            Button:
                background_color: (0, 0, 0, 0)
                text: root.stop_reset
                font_size: 50
                canvas.before:
                    Color:
                        rgba: root.ui_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [60,]
                disabled: root.stop_disabled
                on_press: root.stop_button()

        BoxLayout_1:
            spacing: 5
            padding: 10
            size_hint: 1, .4
            orientation: 'horizontal'
            Button:
                background_color: (0, 0, 0, 0)
                text: 'Minutnik'
                font_size: 30
                canvas.before:
                    Color:
                        rgba: root.ui_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press:
                    root.manager.current = 'time_counter'
                    root.manager.transition.direction = 'left'

            Button:
                background_color: (0, 0, 0, 0)
                text: 'Tabela czasów'
                font_size: 30
                canvas.before:
                    Color:
                        rgba: root.ui_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press:
                    root.manager.current = 'time_table'
                    root.manager.transition.direction = 'right'

            Button:
                background_color: (0, 0, 0, 0)
                text: 'Zapisz'
                font_size: 30
                canvas.before:
                    Color:
                        rgba: root.ui_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press: root.save_button()
                disabled: root.save_disabled



<SavePopup>:
    title: ''
    size_hint: None, None
    size: 400, 400
    auto_dismiss: True

    BoxLayout_1:
        orientation: 'vertical'
        spacing: 10
        padding: 5

        Label:
            text: root.time
            font_size: 60
            color: root.ui_color

        Label:
            text: 'Podaj nazwe '
            font_size: 30
            color: root.ui_color

        TextInput:
            focus: True
            size_hint: 1, .5
            font_size: 30
            cursor_color: root.ui_color
            id: time_name
            multiline: False
            background_color: (97/255, 97/255, 101/255, .6)
            on_text: self.foreground_color = root.ui_color

        Button:
            background_color: (0, 0, 0, 0)
            text: 'Zapisz'
            font_size: 20
            canvas.before:
                Color:
                    rgba: root.ui_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press: root.save_button()


<EndPopup>:
    title: ''
    size_hint: None, None
    size: 400, 400
    auto_dismiss: True

    BoxLayout_1:
        orientation: 'vertical'
        spacing: 5
        padding: 10

        BoxLayout_1:
            orientation: 'horizontal'
            spacing: 5
            padding: 2

            Label:
                text: '0'
                id: hrs_l
                font_size: 70
                color: 1, 0, 0, 1

            Label:
                text: '0'
                id: min_l
                font_size: 70
                color: 1, 0, 0, 1

            Label:
                text: '0'
                id: sec_l
                font_size: 70
                color: 1, 0, 0, 1

            Label:
                text: '0'
                id: micro_sec_l
                font_size: 70
                color: 1, 0, 0, 1

        Label:
            text: 'Czas minął'
            font_size: 60
            color: 1, 0, 0, 1

        Button:
            background_color: (0, 0, 0, 0)
            text: 'OK'
            font_size: 20
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press: root.ok_button()

<TimeCounter>:
    BoxLayout_1:
        spacing: 55
        padding: 5
        orientation: 'horizontal'
        size_hint: .5, .15
        pos_hint: {'center_x': .5, 'center_y': .9}

        Button:
            background_color: (0, 0, 0, 0)
            on_press: root.hour_up()
            Image:
                source: 'kivy_up.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            background_color: (0, 0, 0, 0)
            on_press: root.min_up()
            Image:
                source: 'kivy_up.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            background_color: (0, 0, 0, 0)
            on_press: root.sec_up()
            Image:
                source: 'kivy_up.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

    BoxLayout_1:
        spacing: 55
        padding: 5
        orientation: 'horizontal'
        size_hint: .5, .6
        pos_hint: {'center_x': .5, 'center_y': .7}

        Label:
            text: '0'
            id: hrs_set
            font_size: 70
            color: root.ui_color

        Label:
            text: '0'
            id: min_set
            font_size: 70
            color: root.ui_color

        Label:
            text: '0'
            id: sec_set
            font_size: 70
            color: root.ui_color


    BoxLayout_1:
        spacing: 55
        padding: 5
        orientation: 'horizontal'
        size_hint: .5, .15
        pos_hint: {'center_x': .5, 'center_y': .5}

        Button:
            background_color: (0, 0, 0, 0)
            on_press: root.hours_down()
            Image:
