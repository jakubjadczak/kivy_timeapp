        Button:
            background_color: (0, 0, 0, 0)
            text: 'Stop'
            font_size: 50
            canvas.before:
                Color:
                    rgba: root.ui_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [60,]
            disabled: root.stop_disabled
            on_press: root.stop_button()

    BoxLayout_1:
        spacing: 5
        padding: 10
        size_hint: 1, .2
        pos_hint: {'center_x': .5, 'center_y': .1}
        orientation: 'horizontal'

        Button:
            background_color: (0, 0, 0, 0)
            text: 'Stoper'
            font_size: 30
            canvas.before:
                Color:
                    rgba: root.ui_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press:
                root.manager.current = 'timer'
                root.manager.transition.direction = 'right'

        Button:
            background_color: (0, 0, 0, 0)
            text: 'Tabela czasów'
            font_size: 30
            canvas.before:
                Color:
                    rgba: root.ui_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press: root.manager.current = 'time_table'

        Button:
            background_color: (0, 0, 0, 0)
            text: 'Reset'
            font_size: 30
            canvas.before:
                Color:
                    rgba: root.ui_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press: root.reset_button()


<SelectableButton>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    font_size: 30
    canvas.before:
        Color:
            rgba: root.ui_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30,]


<RV>:
    on_pre_enter: self.refresh_view()
    BoxLayout_1:
        orientation: 'vertical'
        spacing: 5
        RecycleView:
            id: rv_view
            data: root.set_data()
            viewclass: 'SelectableButton'
            SelectableRecycleBoxLayout:
                spacing: 5
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: True
                touch_multiselect: True
        BoxLayout_1:
            size_hint: 1, .3
            spacing: 5
            padding: 5
            Button:
                background_color: (0, 0, 0, 0)
                text: 'Stoper'
                font_size: 40
                canvas.before:
                    Color:
                        rgba: root.ui_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press: root.manager.current = 'timer'

            Button:
                background_color: (0, 0, 0, 0)
                text: 'Minutnik'
                font_size: 40
                canvas.before:
                    Color:
                        rgba: root.ui_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press: root.manager.current = 'time_counter'


<EditPopup>:
    title: ''
    size_hint: None, None
    size: 400, 400
    auto_dismiss: True
    BoxLayout_1:
        orientation: 'vertical'
        spacing: 10

        TextInput:
            id: change_name_input
            text: root.time_name
            focus: True
            size_hint: .7, .1
            pos_hint: {'center_x': .5}
            font_size: 40
            cursor_color: root.ui_color
            multiline: False
            background_color: (97/255, 97/255, 101/255, .6)
            on_text: self.foreground_color = root.ui_color

        Button:
            background_color: (0, 0, 0, 0)
            text: 'Zapisz'
            pos_hint: {'center_x': .5}
            size_hint: .5, .2
            font_size: 25
            canvas.before:
                Color:
                    rgba: root.ui_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press:
                root.obj.update_changes(change_name_input.text)
                root.dismiss()

        Button:
            background_color: (0, 0, 0, 0)
            text: 'Usuń'
            pos_hint: {'center_x': .5}
            size_hint: .5, .2
            font_size: 25
            canvas.before:
                Color:
                    rgba: root.ui_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press:
                root.obj.delete()
                root.dismiss()