<RV>:
    viewclass: 'SelectableButton'
    SelectableRecycleBoxLayout:
        spacing: 5
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<RVTimeTable>:
