<Timer>:
    BoxLayout_1:
        orientation: 'vertical'
        spacing: 5
        padding: 10

        BoxLayout_1:
            orienation: 'horizontal'
            spacing: 5
            padding: 10
            Label:
                text: '0'
                id: hours_l
                font_size: 70
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: 31/255, 58/255, 147/255, 1
            Label:
                text: '0'
                id: min_l
                font_size: 70
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: 31/255, 58/255, 147/255, 1
            Label:
                text: '0'
                id: sec_l
                font_size: 70
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: 31/255, 58/255, 147/255, 1
            Label:
                text: '0'
                id: micro_sec_l
                font_size: 70
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: 31/255, 58/255, 147/255, 1

        BoxLayout_1:
            size_hint: .8, .6
            pos_hint: {'center_x': .5}
            spacing: 5
            padding: 10
            orientation: 'horizontal'
            Button:
                background_color: (0, 0, 0, 0)
                text: 'Start'
                font_size: 20
                canvas.before:
                    Color:
                        rgba: 31/255, 58/255, 147/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [60,]
                disabled: root.start_disabled
                on_press: root.start_button()

            Button:
                background_color: (0, 0, 0, 0)
                text: 'Stop'
                font_size: 20
                canvas.before:
                    Color:
                        rgba: 31/255, 58/255, 147/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [60,]
                disabled: root.stop_disabled
                on_press: root.stop_button()

        BoxLayout_1:
            spacing: 5
            padding: 10
            size_hint: 1, .4
            orientation: 'horizontal'
            Button:
                background_color: (0, 0, 0, 0)
                text: 'Minutnik'
                font_size: 20
                canvas.before:
                    Color:
                        rgba: 31/255, 58/255, 147/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press:
                    root.manager.current = 'time_counter'
                    root.manager.transition.direction = 'left'

            Button:
                background_color: (0, 0, 0, 0)
                text: 'Tabela czasów'
                font_size: 20
                canvas.before:
                    Color:
                        rgba: 31/255, 58/255, 147/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press:
                    root.manager.current = 'time_table'
                    root.manager.transition.direction = 'right'

            Button:
                background_color: (0, 0, 0, 0)
                text: 'Zapisz'
                font_size: 20
                canvas.before:
                    Color:
                        rgba: 31/255, 58/255, 147/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press: root.save_button()
                disabled: root.save_disabled

            Button:
                background_color: (0, 0, 0, 0)
                text: 'Reset'
                font_size: 20
                canvas.before:
                    Color:
                        rgba: 31/255, 58/255, 147/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
                on_press: root.reset_button()


<SavePopup>:
    title: ''
    size_hint: None, None
    size: 400, 400
    auto_dismiss: True

    BoxLayout_1:
        orientation: 'vertical'
        spacing: 10
        padding: 5

        Label:
            text: root.time
            font_size: 60
            color: 31/255, 58/255, 147/255, 1

        Label:
            text: 'Podaj nazwe '
            font_size: 30
            color: 31/255, 58/255, 147/255, 1

        TextInput:
            size_hint: 1, .4
            id: time_name
            multiline: False
            background_color: .85, .87, .88, .3
            on_text: self.foreground_color = (31/255, 58/255, 147/255, 1)

        Button:
            background_color: (0, 0, 0, 0)
            text: 'Zapisz'
            font_size: 20
            canvas.before:
                Color:
                    rgba: 31/255, 58/255, 147/255, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press: root.save_button()


<EndPopup>:
    title: ''
    size_hint: None, None
    size: 400, 400
    auto_dismiss: True

    BoxLayout_1:
        orientation: 'vertical'
        spacing: 5
        padding: 10

        BoxLayout_1:
            orientation: 'horizontal'
            spacing: 5
            padding: 2

            Label:
                text: '0'
                id: hours_l
                font_size: 70
                color: 1, 0, 0, 1

            Label:
                text: '0'
                id: min_l
                font_size: 70
                color: 1, 0, 0, 1

            Label:
                text: '0'
                id: sec_l
                font_size: 70
                color: 1, 0, 0, 1

            Label:
                text: '0'
                id: micro_sec_l
                font_size: 70
                color: 1, 0, 0, 1

        Label:
            text: 'Czas minął'
            font_size: 60
            color: 1, 0, 0, 1

        Button:
            background_color: (0, 0, 0, 0)
            text: 'OK'
            font_size: 20
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            on_press: root.ok_button()

<TimeCounter>:
    BoxLayout_1:
        spacing: 55
        padding: 5
        orientation: 'horizontal'
        size_hint: .5, .15
        pos_hint: {'center_x': .5, 'center_y': .9}

        Button:
            background_color: (0, 0, 0, 0)
            on_press: root.hour_up()
            Image:
                source: 'kivy.up.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            background_color: (0, 0, 0, 0)
            on_press: root.min_up()
            Image:
