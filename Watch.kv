            background_color: (0, 0, 0, 0)
            on_press: root.sec_down()
            Image:
                source: 'kivy_down.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

    BoxLayout_1:
        size_hint: .8, .25
        pos_hint: {'center_x': .5, 'center_y': .3}
        spacing: 5
        padding: 10
        orientation: 'horizontal'
        Button:
            background_color: (0, 0, 0, 0)
